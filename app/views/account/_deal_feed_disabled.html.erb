              <% deal.spongers.each do |sponger| -%>
                <%= gravatar_for(sponger, :size => 30) %>
              <% end -%>
            </td>
            <td rowspan="2" width="*" valign="middle">
            </td>
          </tr>
          <tr>
            <td>
              
            </td>
          </tr>
        </table>
      </div>
    </td>
  </tr>
